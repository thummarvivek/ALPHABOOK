<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f6fc"
    tools:context=".fragment.Sellcol" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">
        
        


        <TextView
            android:id="@+id/selectstream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/filedbordertext"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:drawableEnd="@drawable/arrow_down"
            android:textColorHint="#96001D35"
            android:hint="Stream"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:text="auto fill address"/>

            <ImageButton
                android:id="@+id/gpscall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_gravity="end"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_baseline_gps_fixed_24"/>
        </LinearLayout>

        <EditText
            android:id="@+id/gpsid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/filedbordertext"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColorHint="#96001D35"
            android:hint="Confirm GPS"/>




<!--        <TextView-->
<!--            android:id="@+id/selectuniboard"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="20dp"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:background="@drawable/filedbordertext"-->
<!--            android:drawableEnd="@drawable/arrow_down"-->
<!--            android:hint="Uniersity"-->
<!--            android:textSize="20dp"-->
<!--            android:padding="10dp"-->
<!--            android:textColorHint="#96001D35" />-->

        <EditText
        android:id="@+id/sellpub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filedbordertext"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:textColorHint="#96001D35"
        android:hint="Publisher"/>

    <EditText
        android:id="@+id/selledition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/filedbordertext"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:maxLength="4"
        android:inputType="number"
        android:textColorHint="#96001D35"
        android:hint="Edition"/>


        <EditText
            android:id="@+id/sellamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/filedbordertext"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:inputType="number"
            android:textColorHint="#96001D35"
            android:hint="Amount"/>



    <Button
        android:id="@+id/uploadbook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/filedborder"
        android:textColor="@color/bblack"
       android:text="Upload Your Book"/>



<Space
    android:layout_width="match_parent"
    android:layout_height="50dp"/>


    </LinearLayout>
    </ScrollView>
    </FrameLayout>