<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <!--//card layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <!--image -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">







                <ImageView
                    android:id="@+id/oimg1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/obooktitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Book Title"
                        android:textColor="#001D35"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:gravity="left">


                        <TextView
                            android:id="@+id/obookprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="225"
                            android:textColor="#001D35"
                            android:padding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
                            android:textStyle="bold"
                            android:textSize="15dp" />

                        <RatingBar
                            style="?attr/ratingBarStyleSmall"
                            android:id="@+id/orating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />


                    </LinearLayout>





                    <TextView
                        android:id="@+id/olocationtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:padding="5dp"
                        android:text="Ahmedabad"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:drawablePadding="10dp"
                        android:textColor="#001D35"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/obookcategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="category "
                        android:layout_marginTop="0dp"
                        android:textColor="#001D35"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="16dp" />

                </LinearLayout>



            </LinearLayout>












            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginLeft="10dp">






            </LinearLayout>












            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>


        </LinearLayout>






    </androidx.cardview.widget.CardView>

</LinearLayout>