<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical"
    tools:context=".Bookdetails">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:elevation="10dp"
        app:elevation="10dp"
        app:expanded="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarbookdetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolround"
            android:longClickable="true"
            app:title=" "
            app:titleMargin="10dp"
            app:titleTextColor="#F3F6FC" />

    </com.google.android.material.appbar.AppBarLayout>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/appBarLayout">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/appBarLayout">




            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/book1"

                        style="@style/imagestyle" />

                    <ImageView
                        android:id="@+id/book2"
                        style="@style/imagestyle" />

                    <ImageView
                        android:id="@+id/book3"
                        style="@style/imagestyle" />

                    <ImageView
                        android:id="@+id/book4"
                        style="@style/imagestyle" />

                    <ImageView
                        android:id="@+id/book5"
                        style="@style/imagestyle" />

                    <ImageView
                        android:id="@+id/book6"
                        style="@style/imagestyle" />


                    <ImageView
                        android:id="@+id/book7"
                        style="@style/imagestyle" />


                    <ImageView
                        android:id="@+id/book8"
                        style="@style/imagestyle" />

                    <ImageView
                        android:id="@+id/book9"
                        style="@style/imagestyle" />


                    <ImageView
                        android:id="@+id/book10"
                        style="@style/imagestyle" />

                </LinearLayout>


            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/booktitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:hint="Book Title"
                    android:padding="10dp"
                    android:textColor="@color/bblack"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/bookamount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
                    android:hint="500"
                    android:padding="10dp"
                    android:textColor="@color/bblack"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/bookrating"
                    style="?attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@color/white"
                    android:layout_gravity="center_vertical"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="0.0"
                    android:stepSize="1.0"
                    android:theme="@style/RatingBar" />



            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:singleLine="true"
                android:text="Books :-"
                android:layout_margin="2dp"
                android:textColor="@color/bblack"
                android:textSize="18sp" />





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_margin="2dp"
                android:background="#fff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookcat1"
                    style="@style/booklist"
                    android:hint="Book 1" />

                <TextView
                    android:id="@+id/bookcat2"
                    style="@style/booklist"
                    android:hint="Book 2" />

                <TextView
                    android:id="@+id/bookcat3"
                    style="@style/booklist"
                    android:hint="Book 3"
                      />

                <TextView
                    android:id="@+id/bookcat4"
                    style="@style/booklist"
                    android:hint="Book 3"
                      />

                <TextView
                    android:id="@+id/bookcat5"
                    style="@style/booklist"
                    android:hint="Book 5"
                     />

                <TextView
                    android:id="@+id/bookcat6"
                    style="@style/booklist"
                    android:hint="Book 6"
                     />


                <TextView
                    android:id="@+id/bookcat7"
                    style="@style/booklist"
                    android:hint="Book 7"
                     />

                <TextView
                    android:id="@+id/bookcat8"
                    style="@style/booklist"
                    android:hint="Book 8"
                    />

                <TextView
                    android:id="@+id/bookcat9"
                    style="@style/booklist"
                    android:hint="Book 9"
                  />

                <TextView
                    android:id="@+id/bookcat10"
                    style="@style/booklist"
                    android:hint="Book 10"
                     />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/bookdegree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:hint="Degree"
                    android:padding="10dp"
                    android:textColor="@color/bblack"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/bookuni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:hint="University"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/bblack"
                    android:textSize="18sp" />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:weightSum="2">


                <TextView
                    android:id="@+id/bookauthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:hint="Author"
                    android:padding="10dp"
                    android:textColor="@color/bblack"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bookedition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:hint="Edition"
                    android:padding="10dp"
                    android:textColor="@color/bblack"
                    android:textSize="18sp" />

            </LinearLayout>









            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="Location"
                    android:textColor="@color/bblack"
                    android:textSize="20sp" />


                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <TextView
                    android:id="@+id/addresshow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:hint="Address"
                    android:layout_margin="2dp"
                    android:padding="10dp"
                    android:textColor="@color/bblack"
                    android:textSize="18sp" />


            </LinearLayout>





            <Space
                android:layout_width="match_parent"
                android:layout_height="150dp"/>


        </LinearLayout>

        <!--    end-->
    </ScrollView>

    <LinearLayout
        android:id="@+id/cartpayment"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:outlineSpotShadowColor="@color/black"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:id="@+id/addtocart"
            android:background="@drawable/whiteborder"
            android:gravity="center"
            android:text="add to cart"
            android:textColor="@color/bblack"
            android:textSize="15dp" />

<!--        <Button-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="45dp"-->
<!--            android:layout_margin="10dp"-->
<!--            android:layout_weight="1"-->
<!--            android:background="@drawable/blackborder"-->
<!--            android:backgroundTint="#0F537D"-->
<!--            android:gravity="center"-->
<!--            android:text="buy"-->
<!--            android:textColor="@color/bblack"-->
<!--            android:textSize="15sp" />-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>