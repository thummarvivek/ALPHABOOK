<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F3F6FC"    >



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
       android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#ffffff">


        <!--//card layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <!--image -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">







                <ImageView
                    android:id="@+id/cimg1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_weight="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/cbooktitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="Book Title"
                        android:textColor="#001D35"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:gravity="left">


                        <TextView
                            android:id="@+id/cbookprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="225"
                            android:textColor="#001D35"
                            android:padding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
                            android:textSize="16sp" />

                        <RatingBar
                            style="?attr/ratingBarStyleSmall"
                            android:id="@+id/crating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical" />


                    </LinearLayout>





                    <TextView
                        android:id="@+id/clocationtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:padding="5dp"
                        android:text="Ahmedabad"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:drawablePadding="10dp"
                        android:textColor="#001D35"
                        android:textSize="16dp"  />
                    <TextView
                        android:id="@+id/cbookcategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:text="category "
                        android:layout_marginTop="0dp"
                        android:textColor="#001D35"
                        android:padding="5dp"
                        android:textSize="16dp" />

                </LinearLayout>



            </LinearLayout>



















            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:gravity="left">

                <TextView
                    android:id="@+id/cbookpub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Publisher"
                    android:layout_marginTop="0dp"
                    android:textColor="#001D35"
                    android:padding="5dp"
                    android:textSize="16dp" />




                <TextView
                    android:id="@+id/cbookedition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Edition"
                    android:layout_marginTop="0dp"
                    android:textColor="#001D35"
                    android:padding="5dp"
                    android:layout_marginLeft="30dp"
                    android:textSize="16dp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#96000000"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:gravity="center">

                <Button
                    android:id="@+id/removecart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove"
                    android:layout_weight="1"
                    android:background="@drawable/errorbtn"
                    android:textColor="#350000"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/buycard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buy Now"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/errorbtn"
                    android:textColor="#0027FF"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>


        </LinearLayout>






    </androidx.cardview.widget.CardView>








</LinearLayout>