<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".adapter.Myorderadapter">

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/bookdetails"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="30dp"
        android:clickable="true"
        app:cardBackgroundColor="#ffffff">


        <!--//card layout -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <!--image -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1mo"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img2mo"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img3mo"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>








            <TextView
                android:id="@+id/booktitlemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="#001D35"
                android:padding="10dp"
                android:text="title"
                android:textStyle="bold"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginLeft="10dp">

                <TextView
                    android:id="@+id/bookpricemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="225"
                    android:layout_gravity="right"
                    android:textColor="#001D35"
                    android:padding="2dp"
                    android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
                    android:textStyle="bold"
                    android:textSize="14sp" />





                <RatingBar
                    android:id="@+id/bookratingmo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="?attr/ratingBarStyleSmall"/>






            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:weightSum="2">


                <TextView
                    android:id="@+id/bookcategorymo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="category"
                    android:textColor="#001D35"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/locationtextmo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="2dp"
                    android:text="near by "
                    android:layout_weight="1"
                    android:textColor="#001D35"
                    android:textSize="16sp"
                    android:textStyle="bold" />




            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/bookpubmo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publisher"
                    android:textColor="#001D35"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="14sp" />



                <TextView
                    android:id="@+id/bookeditionmo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edition"
                    android:textColor="#001D35"
                    android:padding="2dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="16sp" />

            </LinearLayout>











            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/startmap"
                android:textColor="@color/black"
                android:text="Collect Book"/>




        </LinearLayout>






    </androidx.cardview.widget.CardView>



</LinearLayout>